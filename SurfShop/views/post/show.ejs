      <% layout("layouts/post-show-layout") -%>

      <h1>SHOW POST </h1>
      <div></div><h2>Title: <%= post.title %></h2></div>
      <div><span>Price: <%= post.price %></span></div>
      <div><span> Desc: <%= post.description %></span></div>
      <div><span>Location: <%= post.location %></span></div>
      <%if(post.author){ %>
    <div><span>Author: <%= post.author.username %> </span></div>
      <%}%>
      


      <div>
          <%for(let i=0; i<5; i++){%>
            <% if(i<floorRating){%>
              <i class="fa-solid fa-star"></i>
            <% } else if((post.averageRating -i)>0 && (post.averageRating -i)<1){ %>

              <i class="fa-solid fa-star-half"></i>
              <%  } else { %>
                <i style="color:grey !important" class="fa-solid fa-star"></i>
                <% } %>
          <%}%>
        
        <span>Average: <%= post.averageRating %></span></div>

      <div><div id="map"></div>
      <%  for(let review of post.reviews) { %>
        <hr>
        <div><span>Review: <%= review.body %> | <%= review.rating %></span></div>
        <div><span>Author: <%= review.author.username %> </span></div>
        <% if(review.author.equals(currentUser._id)){ %>
          <div>
            <div>
               <form  method="POST" action="/post/<%=post.id%>/reviews/<%=review.id%>?_method=DELETE">
               <button>Delete</button>                                               
            </form>
            <button class="formBtn">Edit</button>
            <form  class="toggleForm"  method="POST" action="/post/<%=post.id%>/reviews/<%=review.id%>?_method=PUT">
                <div> <textarea name="reviews[body]"><%= review.body %></textarea></div>
                <div>
                  <fieldset class="starability-heart">
                <legend>Rating:</legend>
                <input type="radio" id="second-rate0" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                <input type="radio" id="second-rate1" name="reviews[rating]" value="1" />
                <label for="second-rate1" title="Terrible">1 star</label>
                <input type="radio" id="second-rate2" name="reviews[rating]" value="2" />
                <label for="second-rate2" title="Not good">2 stars</label>
                <input type="radio" id="second-rate3" name="reviews[rating]" value="3" />
                <label for="second-rate3" title="Average">3 stars</label>
                <input type="radio" id="second-rate4" name="reviews[rating]" value="4" />
                <label for="second-rate4" title="Very good">4 stars</label>
                <input type="radio" id="second-rate5" name="reviews[rating]" value="5" />
                <label for="second-rate5" title="Amazing">5 stars</label>
              </fieldset>
                 <button>Update</button>  
                </div>                                             
            </form>
            <script>
              $("#second-rate<%=review.rating%>").prop("checked",true)
            </script>

        </div>
        <% } %>
       
        <hr>
      <% } %>
      <div>

      <% for(let files of post.images) {%>
      <img src="<%= files.path %>" alt="Surf Images" width="200px">
      <%}%>
      </div>
      <div>
          <a href="/post/<%=post.id%>/edit">EDIT POST</a>
      </div>
      <div>
      <form method="post" action="/post/<%=post.id%>?_method=DELETE">
      <button>Delete Post</button>
      </form>
      </div>
      </div>
      <div>
          <div>
            <div> <h1>Create Review</h1></div>
          <form method="POST" action="/post/<%=post.id%>/reviews">
            <div> <textarea name="reviews[body]"></textarea></div>
            <fieldset class="starability-heart">
              <legend>Rating:</legend>
              <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="reviews[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="reviews[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="reviews[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="reviews[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="reviews[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
                 <div><button>Create Review</button></div>
          </form>
          
      </div>
